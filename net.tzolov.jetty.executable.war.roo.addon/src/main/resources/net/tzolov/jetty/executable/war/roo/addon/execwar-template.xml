<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <!--id>${artifactId}</id-->
  <id>EXECWAR</id>
  <formats>
    <format>war</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <unpack>true</unpack>
      <outputDirectory>/</outputDirectory>
      <includes>
      	<include>org.eclipse.jetty.aggregate:jetty-all-server</include>
      	<include>javax.servlet:servlet-api</include>
      	<include>org.mortbay.jetty:jsp-2.1-glassfish</include>	      	      	
		<!-- <include>org.eclipse.jetty:jetty-jsp-2.1</include> -->
		<!-- <include>org.eclipse.jetty:jetty-util</include> -->
      </includes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>target/classes</directory>
      <includes>
      	<include>/**/*/ExecWar.class</include>
      </includes>
      <outputDirectory/>
    </fileSet>
	<fileSet>
        <directory>target/${artifactId}-${version}</directory>
        <outputDirectory />
        <excludes>
      		<exclude>META-INF/**/*</exclude>
      	</excludes>
    </fileSet>
  </fileSets>
</assembly>